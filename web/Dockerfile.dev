# Development-focused Dockerfile with better caching
FROM node:18-alpine

WORKDIR /app

# Copy package files first for better layer caching
COPY package.json package-lock.json* ./

# Use npm ci for faster, reliable installs and clean cache
RUN npm ci && npm cache clean --force

# Copy source code
COPY . .

EXPOSE 3000

# Start development server
CMD ["npm", "start"]
